<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes Taking</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- <link href="/stylesheets/output.css" rel="stylesheet"> -->
</head>

<body>
    <div class="main w-screen min-h-screen bg-zinc-900 text-white">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="block px-2 py-3 outline-none w-full rounded-md bg-zinc-800" type="text"
                    placeholder="Titel goes here.." name="title">
                <textarea class="block px-2 py-3 outline-none w-full rounded-md bg-zinc-800 resize-none mt-2"
                    placeholder="Write your task details.." name="details"></textarea>
                <input class="bg-blue-600 px-2 py-1 mt-2 rounded-md" type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if(files.length>0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-2xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between items-center">
                            <a class="text-blue-300 inline-block mt-3" href="/file/<%= val %>">Read more.</a>
                            <a class="text-blue-300 inline-block mt-3" href="/edit/<%= val %>">Edit</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h1 class="text-2xl text-zinc-500 tracking-tighter">No task yet.</h1>
            <% } %>
        </div>
    </div>
    <script src="/javascripts/script.js"></script>
</body>

</html>